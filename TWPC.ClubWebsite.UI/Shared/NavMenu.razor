<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Tiverton Water Polo Club</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about" Match="NavLinkMatch.All">
                <span class="oi oi-info" aria-hidden="true"></span> About
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="timetable" Match="NavLinkMatch.All">
                <span class="oi oi-calendar" aria-hidden="true"></span> Timetable
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="join" Match="NavLinkMatch.All">
                <span class="oi oi-signpost" aria-hidden="true"></span> Join
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="kit" Match="NavLinkMatch.All">
                <span class="oi oi-people" aria-hidden="true"></span> Club Kit
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="welfare" Match="NavLinkMatch.All">
                <span class="oi oi-eye" aria-hidden="true"></span> Welfare
            </NavLink>
        </div>
    </nav>

    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="contact" Match="NavLinkMatch.All">
                <span class="oi oi-envelope-closed" aria-hidden="true"></span> Contact
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
